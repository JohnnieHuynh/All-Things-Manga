<body>
  <h1 class="jumbotron">Create an Account</h1>
  <div class="placeholder">
    <form action="/addAccount">
      <!-- Account Fields -->
      Username: 
      <input type="text" name="username"> <br>

      Password: 
      <input type="text" name="password"> <br>

      First Name: 
      <input type="text" name="firstName"> <br>

      State: 
      <select id="stateBox" type="text" name="state"></select>
      <p id="stateList"></p>
 
      ZIP Code: <input id="zipBox" type="text" name="zipCode" onchange="updateZip();"> <span id="zipFeedback"></span>
      <br>

      City: <span id="city"></span> 
      <br>

      Gender: 
      <input type="radio" id="male" name="gender" value="M">
      <label for="male">Male</label>

      <input type="radio" id="female" name="gender" value="F">
      <label for="female">Female</label>
      <br>

      <!-- Submit -->
      <button name="submitCreateAccount">Create</button>
      <br>

    </form>

     <form action="/account">
      <button name="returnToAccount">Return</button>
    </form>

    <% if (accountAdded) {%>
    <h3> Account Added! <h3>
  <% } %>
  </div>
  <script src="javascript/addAccount.js"> </script>
